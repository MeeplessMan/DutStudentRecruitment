<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:maxWidth="200dp"> <!-- This maxWidth was from the original context, keep if intended -->

    <EditText
        android:id="@+id/editTextSkillItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Enter skill"
        android:inputType="textCapSentences"
        android:background="@drawable/edittext_bg"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:minHeight="48dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/buttonRemoveSkillItem"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_remove_circle"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@android:color/holo_red_dark"
        android:contentDescription="Remove Skill"
        android:padding="8dp"
        android:scaleType="centerInside"/>
</LinearLayout>